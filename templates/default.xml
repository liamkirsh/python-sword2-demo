<?xml version="1.0" encoding="UTF-8"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0" xmlns:hal="http://hal.archives-ouvertes.fr/">
    <text>
        <body>
            <listBibl>
                <biblFull>
                    <titleStmt>
                        <title xml:lang="en">{{ title }}</title>
                        {% for author in authors %}<author role="aut">
                            <persName>
                                <forename type="first">{{ author.first }}</forename>
                                <surname>{{ author.last }}</surname>
                            </persName>
                            <idno type="idhal"></idno>
                            <affiliation ref="#struct-{{ author.affiliation_id }}"/>
                        </author>
                    {% endfor %}</titleStmt>
                    <publicationStmt>
                        <idno type="halRefHtml">
                            <i>{{ publication.name }}</i>, {{ publication.year }}, {{ publication.volume }} ({{ publication.issue }}), pp.{{ publication.pp }}
                        </idno>
                        <idno type="halRef">
                            {{ publication.name }}, {{ publication.year }}, {{ publication.volume }} ({{ publication.issue }}), pp.{{ publication.pp }}
                        </idno>
                    </publicationStmt>
                    <sourceDesc>
                        <biblStruct>
                            <analytic>
                                <title xml:lang="en">{{ title }}</title>
                                {% for author in authors %}<author role="rsp">
                                    <persName>
                                        <forename type="first">{{ author.first }}</forename>
                                        <surname>{{ author.last }}</surname>
                                    </persName>
                                    <idno type="idhal">{{ author.halid }}</idno>
                                    <affiliation ref="#struct-{{ author.affiliation_id }}"/>
                                </author>
                            {% endfor %}</analytic>
                            <monogr>
                                <title level="j">{{ publication.name }}</title>
                                <imprint>
                                    <biblScope unit="volume">{{ publication.volume }}</biblScope>
                                    <biblScope unit="issue">{{ publication.issue }}</biblScope>
                                    <biblScope unit="pp">{{ publication.pp }}></biblScope>
                                </imprint>
                            </monogr>
                            <idno type="doi">{{ doi }}</idno>
                        </biblStruct>
                    </sourceDesc>
                </biblFull>
            </listBibl>
        </body>
        <back>
            <listOrg type="structures">{% for structure in structures %}
                <org type="{{ structure.type }}" xml:id="struct-{{ structure.recid }}" status="VALID">
                    <orgName>{{ structure.name }}</orgName>
                    <desc><address>
                            {% for addrLine in structure.address %}<addrLine>{{ addrLine }}</addrLine>
                            {% endfor %}<country key="{{ structure.country }}"/>
                        </address>
                </desc>
                </org>{% endfor %}</listOrg>
        </back>
    </text>
</TEI>
